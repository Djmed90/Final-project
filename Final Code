var currentScene = 0;
var BallX = 200;
var BallMoveX = 1;
var BallY = 200;
var BallMoveY = 0;
var BallSpeed = 2.5;

//CONSTANTS
var GRAVITY = 0.3;

//function for ball and its movement
var Ball = function() 
 {
    ellipse(BallX,BallY,10,10);
    BallMoveY += GRAVITY;
    BallY += BallMoveY;
    BallX += BallMoveX;
    
    if(BallY>330)
    {
        BallMoveY *= -1;
    }
    if(BallX>310)
    {
        BallMoveX *= -1;
    }
     if(BallX<80)
    {
        BallMoveX *= -1;
    }
     if(BallY>334)
    {
        BallMoveY *= 0;
        BallMoveX *= 0;
        GRAVITY = 0;
    }
 };
 
 
var Button = function(config) {
    this.x = config.x || -1;
    this.y = config.y || 0;
    this.width = config.width || 66;
    this.height = config.height || 51;
    this.label = config.label || "Click";
    this.onClick = config.onClick || function() {};
};

Button.prototype.draw = function() {
    fill(0, 234, 255);
    rect(this.x, this.y, this.width, this.height, 5);
    fill(0, 0, 0);
    textSize(19);
    textAlign(LEFT, TOP);
    text(this.label, this.x+10, this.y+this.height/4);
};

Button.prototype.isMouseInside = function() {
    return mouseX > this.x &&
           mouseX < (this.x + this.width) &&
           mouseY > this.y &&
           mouseY < (this.y + this.height);
};

Button.prototype.handleMouseClick = function() {
    if (this.isMouseInside()) {
        this.onClick();
    }
};

var startButton = new Button({
    x: 167,
    y: 232,
    label: "Start",
    onClick: function() {
        currentScene = 1;
    }
});

var splash = function ()
{
    
    background(0, 204, 255);
    fill(213, 0, 255);
    textSize(55);
    text("Walls", 128, 95);
    fill(0, 0, 0);
    textSize(15);
    text("By: Nick Rapoza and Darren Medeiros", 76, 180);
    startButton.draw();
    drawMe(327,291,100,100);
    drawBitmoji(-103,120,109,101);

};
var walls1 = function () //THe Bounds(Walls)
{
    background(0, 0, 0);
    stroke(255, 255, 255);
    strokeWeight(15);
    line(60,50,330,50);
    line(60,350,330,350);
    line(60,50,60,350);
    line(330,50,330,350);
    Ball();
};
    
mouseClicked = function() {
    if (currentScene === 0)
    {
        startButton.handleMouseClick();
    }
};
draw = function() {
    if (currentScene === 0) 
        { splash();
        }
    if (currentScene === 1)
    { walls1();
    }
        
};
